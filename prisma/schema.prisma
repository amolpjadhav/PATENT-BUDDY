generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id                 String    @id @default(cuid())
  title              String
  jurisdiction       String    @default("US")
  interviewStep      Int       @default(0)
  interviewCompleted Boolean   @default(false)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  answers       InterviewAnswer[]
  sections      DraftSection[]
  qualityIssues QualityIssue[]
}

model InterviewAnswer {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  questionKey String
  answer      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([projectId, questionKey])
}

model DraftSection {
  id         String   @id @default(cuid())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sectionKey String
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([projectId, sectionKey])
}

model QualityIssue {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  type      String
  severity  String
  message   String
  metadata  String   @default("{}")
  createdAt DateTime @default(now())
}
